<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/background_sorting"
tools:context=".SortingScan"
    android:id="@+id/constraintLayoutSortingScan">


    <Button
        android:id="@+id/btScan"
        android:layout_width="269dp"
        android:layout_height="83dp"
        android:text="Skanuj"
        android:textSize="30dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404" />

    <TextView
        android:id="@+id/tvUuidv4"
        android:layout_width="331dp"
        android:layout_height="75dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:text="Robocze UUIDv4"
        android:textColor="@color/purple"
        android:textSize="24dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btScan"
        app:layout_constraintVertical_bias="0.161" />

    <TextView
        android:id="@+id/tvChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Ustaw lokalizacjÄ™ paczki "
        android:textColor="@color/grey"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUuidv4"
        app:layout_constraintVertical_bias="0.112" />

    <Spinner
        android:id="@+id/sprChooseNextStep"
        android:layout_width="317dp"
        android:layout_height="34dp"
        android:background="@color/white"
        android:maxWidth="250dp"
        android:paddingBottom="10dp"
        android:textColor="@color/purple"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChoose"
        app:layout_constraintVertical_bias="0.208" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="216dp"
        android:layout_height="91dp"
        android:backgroundTint="@color/purple"

        android:text="Zapisz"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChoose"
        app:layout_constraintVertical_bias="0.811" />

    <TextView
        android:id="@+id/tvOrganizationShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="25dp"
        android:text=" "
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btScan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <TextView
        android:id="@+id/tvuidv4label"
        android:layout_width="327dp"
        android:layout_height="24dp"
        android:width="200dp"
        android:background="@color/white"
        android:text="Identyfikator: "
        android:textColor="@color/grey"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/tvUuidv4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btScan"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
